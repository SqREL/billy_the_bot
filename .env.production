# Telegram Configuration
BILLY_TELEGRAM_TOKEN=your_bot_token_here
BILLY_BOT_NAME=your_bot_username

# Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database (handled by Docker)
DATABASE_URL=sqlite3:///app/db/bot.sqlite3

# Redis (handled by Docker)
REDIS_URL=redis://redis:6379

# Web Admin Panel
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
SESSION_SECRET=your-very-long-secret-key-that-is-at-least-64-characters-long-for-security
WEB_PORT=3000

# Moderation Settings
ENABLE_AUTO_MODERATION=true
VIOLENCE_THRESHOLD=0.7
TOXICITY_THRESHOLD=0.8
MAX_MESSAGES_PER_MINUTE=10
MAX_MESSAGES_PER_HOUR=100

# Bot Settings
LOG_LEVEL=INFO
MAX_CLAUDE_TOKENS=1000

# Points System
DAILY_POINTS_LIMIT=100
MESSAGE_REWARD_CHANCE=0.1
TRANSFER_MIN_AMOUNT=10
TRANSFER_MAX_AMOUNT=500

# Optional: Set timezone
TZ=Europe/Kiev

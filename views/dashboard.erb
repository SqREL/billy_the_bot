<% @page_title = "Dashboard" %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">Dashboard</h2>
    <div class="d-flex align-items-center">
        <span class="badge bg-success me-2">Online</span>
        <span class="text-muted">Admin: <%= session[:admin_username] %></span>
    </div>
</div>

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="stat-card p-3">
            <div class="d-flex align-items-center">
                <div class="stat-icon gradient-bg text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                    <i class="fas fa-users"></i>
                </div>
                <div>
                    <h3 class="mb-0"><%= @stats[:total_users] %></h3>
                    <p class="text-muted mb-0">Total Users</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-3">
        <div class="stat-card p-3">
            <div class="d-flex align-items-center">
                <div class="stat-icon bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                    <i class="fas fa-user-check"></i>
                </div>
                <div>
                    <h3 class="mb-0 text-success"><%= @stats[:active_users] %></h3>
                    <p class="text-muted mb-0">Active Users (24h)</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-3">
        <div class="stat-card p-3">
            <div class="d-flex align-items-center">
                <div class="stat-icon bg-info text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                    <i class="fas fa-comments"></i>
                </div>
                <div>
                    <h3 class="mb-0 text-info"><%= @stats[:total_messages] %></h3>
                    <p class="text-muted mb-0">Total Messages</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-3">
        <div class="stat-card p-3">
            <div class="d-flex align-items-center">
                <div class="stat-icon bg-warning text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                    <i class="fas fa-flag"></i>
                </div>
                <div>
                    <h3 class="mb-0 text-warning"><%= @stats[:flagged_messages] %></h3>
                    <p class="text-muted mb-0">Flagged Messages</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Additional Stats Row -->
<div class="row mb-4">
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="stat-card p-3">
            <div class="d-flex align-items-center">
                <div class="stat-icon bg-danger text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                    <i class="fas fa-ban"></i>
                </div>
                <div>
                    <h3 class="mb-0 text-danger"><%= @stats[:banned_users] %></h3>
                    <p class="text-muted mb-0">Banned Users</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-3">
        <div class="stat-card p-3">
            <div class="d-flex align-items-center">
                <div class="stat-icon bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                    <i class="fas fa-star"></i>
                </div>
                <div>
                    <h3 class="mb-0 text-primary"><%= @stats[:total_points_distributed] %></h3>
                    <p class="text-muted mb-0">Points Distributed</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-3">
        <div class="stat-card p-3">
            <div class="d-flex align-items-center">
                <div class="stat-icon bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                    <i class="fas fa-user-plus"></i>
                </div>
                <div>
                    <h3 class="mb-0 text-secondary"><%= @stats[:recent_registrations] %></h3>
                    <p class="text-muted mb-0">New Users (7d)</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 mb-3">
        <div class="stat-card p-3">
            <div class="d-flex align-items-center">
                <div class="stat-icon bg-dark text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                    <i class="fas fa-gavel"></i>
                </div>
                <div>
                    <h3 class="mb-0"><%= @stats[:moderation_actions_today] %></h3>
                    <p class="text-muted mb-0">Mod Actions (24h)</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-12">
        <div class="stat-card p-4">
            <h5 class="mb-3"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
            <div class="row">
                <div class="col-md-3 mb-2">
                    <a href="/users" class="btn btn-outline-primary w-100">
                        <i class="fas fa-users me-2"></i>Manage Users
                    </a>
                </div>
                <div class="col-md-3 mb-2">
                    <button class="btn btn-outline-success w-100" onclick="showBulkPointsModal()">
                        <i class="fas fa-gift me-2"></i>Bulk Give Points
                    </button>
                </div>
                <div class="col-md-3 mb-2">
                    <a href="/templates/new" class="btn btn-outline-info w-100">
                        <i class="fas fa-plus me-2"></i>New Template
                    </a>
                </div>
                <div class="col-md-3 mb-2">
                    <button class="btn btn-outline-warning w-100" onclick="showBroadcastModal()">
                        <i class="fas fa-bullhorn me-2"></i>Broadcast
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity -->
<div class="row">
    <div class="col-lg-6 mb-4">
        <div class="stat-card p-4">
            <h5 class="mb-3"><i class="fas fa-clock me-2"></i>Recent Users</h5>
            <div class="table-responsive">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Role</th>
                            <th>Points</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% User.order(created_at: :desc).limit(5).each do |user| %>
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="user-avatar me-2">
                                        <%= (user.first_name || 'U')[0].upcase %>
                                    </div>
                                    <div>
                                        <div class="fw-bold"><%= user.display_name %></div>
                                        <small class="text-muted">ID: <%= user.telegram_id %></small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-<%= user.admin? ? 'danger' : user.moderator? ? 'warning' : 'secondary' %>">
                                    <%= user.role.capitalize %>
                                </span>
                            </td>
                            <td>
                                <span class="points-display">
                                    <i class="fas fa-star me-1"></i><%= user.points %>
                                </span>
                            </td>
                            <td>
                                <span class="status-badge bg-<%= user.active? ? 'success' : user.banned? ? 'danger' : 'warning' %>">
                                    <%= user.status.capitalize %>
                                </span>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            <div class="text-center mt-3">
                <a href="/users" class="btn btn-outline-primary btn-sm">View All Users</a>
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-4">
        <div class="stat-card p-4">
            <h5 class="mb-3"><i class="fas fa-exclamation-triangle me-2"></i>Recent Moderation</h5>
            <div class="table-responsive">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Action</th>
                            <th>User</th>
                            <th>Reason</th>
                            <th>Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% ModerationLog.includes(:user).order(created_at: :desc).limit(5).each do |log| %>
                        <tr>
                            <td>
                                <span class="badge bg-<%=
                                    case log.action
                                    when 'banned' then 'danger'
                                    when 'warned' then 'warning text-dark'
                                    when 'muted' then 'info'
                                    when 'unbanned' then 'success'
                                    else 'secondary'
                                    end
                                %>">
                                    <%= (log.action || 'unknown').to_s.humanize %>
                                </span>
                            </td>
                            <td>
                                <small><%= log.user&.display_name || "User #{log.user_id}" %></small>
                            </td>
                            <td>
                                <small class="text-muted"><%= truncate_text(log.reason, 30) %></small>
                            </td>
                            <td>
                                <small class="text-muted"><%= time_ago_in_words(log.created_at) %> ago</small>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modals -->
<!-- Bulk Points Modal -->
<div class="modal fade" id="bulkPointsModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bulk Give Points</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="bulkPointsForm">
                    <div class="mb-3">
                        <label class="form-label">Points Amount</label>
                        <input type="number" class="form-control" name="amount" required min="1">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Reason</label>
                        <input type="text" class="form-control" name="reason" placeholder="e.g., Daily bonus" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Target Users</label>
                        <select class="form-select" name="target">
                            <option value="all_active">All Active Users</option>
                            <option value="active_24h">Active in Last 24h</option>
                            <option value="top_users">Top 10 Users</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" onclick="submitBulkPoints()">Give Points</button>
            </div>
        </div>
    </div>
</div>

<!-- Broadcast Modal -->
<div class="modal fade" id="broadcastModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Broadcast Message</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="broadcastForm">
                    <div class="mb-3">
                        <label class="form-label">Message</label>
                        <textarea class="form-control" name="message" rows="4" required placeholder="Enter your broadcast message..."></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Target Chats</label>
                        <select class="form-select" name="target_chats">
                            <option value="all">All Chats</option>
                            <option value="groups">Group Chats Only</option>
                            <option value="private">Private Chats Only</option>
                        </select>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="pin_message" id="pinMessage">
                        <label class="form-check-label" for="pinMessage">
                            Pin message in groups
                        </label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="submitBroadcast()">Send Broadcast</button>
            </div>
        </div>
    </div>
</div>

<script>
function showBulkPointsModal() {
    new bootstrap.Modal(document.getElementById('bulkPointsModal')).show();
}

function showBroadcastModal() {
    new bootstrap.Modal(document.getElementById('broadcastModal')).show();
}

function submitBulkPoints() {
    const form = document.getElementById('bulkPointsForm');
    const formData = new FormData(form);

    // Implementation would make API call to bulk give points
    showToast('Bulk points distribution started!', 'success');
    bootstrap.Modal.getInstance(document.getElementById('bulkPointsModal')).hide();
}

function submitBroadcast() {
    const form = document.getElementById('broadcastForm');
    const formData = new FormData(form);

    // Implementation would make API call to broadcast message
    showToast('Broadcast message sent!', 'success');
    bootstrap.Modal.getInstance(document.getElementById('broadcastModal')).hide();
}

// Helper function for time ago
function timeAgoInWords(date) {
    const now = new Date();
    const diffInSeconds = Math.floor((now - date) / 1000);

    if (diffInSeconds < 60) return `${diffInSeconds} seconds`;
    if (diffInSeconds < 3600) return `${Math.floor(diffInSeconds / 60)} minutes`;
    if (diffInSeconds < 86400) return `${Math.floor(diffInSeconds / 3600)} hours`;
    return `${Math.floor(diffInSeconds / 86400)} days`;
}

function truncate(text, length) {
    return text.length > length ? text.substring(0, length) + '...' : text;
}
</script>
